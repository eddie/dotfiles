{
  "prettier.enable": true,
  "typescript.showUnused": true,
  "editor.codeActionsOnSave": {
    "eslint.fixAll": true
  },
  "eslint.enable": false,
  "eslint.workingDirectories": ["./client", "./frontend"],
  "eslint.format.enable": true,
  "python.analysis.indexing": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "pyright.enable": true,
  "pyright.inlayHints.variableTypes": false,
  "pyright.inlayHints.parameterTypes": false,
  "pyright.inlayHints.functionReturnTypes": false,
  "pyright.completion.importSupport": true,
  "pyright.organizeimports.provider": "ruff",
  "pyright.venvPath": ".",
  "pyright.venv": ".venv",
  "python.formatting.provider": "ruff",

  "htmldjango.enable": true,
  "htmldjango.djlint.preserveBlankLines": true,
  "eslint.rules.customizations": [
    {
      "rule": "no-explicit-any",
      "severity": "off"
    }
  ],
  "coc.preferences.formatOnSave": true,
  "prettier.enableDebugLogs": true
}
